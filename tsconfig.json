{
    "compilerOptions": {
        "lib": ["esnext", "dom"],
        "module": "esnext",
        "target": "es2021",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowUnreachableCode": true,
        "allowUnusedLabels": true,
        "allowJs": true,
        "rootDir": "lib",
        "outDir": "dist"
    },
    "include": ["./lib"],
    "ts-node": {
        "esm": true
    }
}
