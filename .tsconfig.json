{
    "compilerOptions": {
        "lib": ["esnext"],
        "module": "esnext",
        "target": "es2021",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "allowUnreachableCode": true,
        "allowUnusedLabels": true,
        "allowJs": true,
        "rootDir": "src",
        "outDir": "lib"
    },
    "include": ["./src"]
}
