{
    "name": "dayjs-simple",
    "version": "1.0.0",
    "description": "A top-level wrapper around the dayjs library",
    "main": "index.js",
    "types": "index.d.ts",
    "scripts": {
        "test": "jest --verbose --config jest.config.ts",
        "coverage": "jest --verbose --config jest.config.ts --coverage",
        "lint:check": "eslint lib --ignore-path .gitignore --ext .ts",
        "lint:fix": "eslint lib --ignore-path .gitignore --ext .ts --fix",
        "prettier:check": "prettier --check .",
        "prettier:write": "prettier --write .",
        "build": "tsc",
        "prepare": "husky install"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/orison-networks/dayjs-simple.git"
    },
    "bugs": {
        "url": "https://github.com/orison-networks/dayjs-simple/issues"
    },
    "homepage": "https://github.com/orison-networks/dayjs-simple#readme",
    "keywords": [
        "dayjs",
        "nodejs",
        "typescript",
        "dates"
    ],
    "devDependencies": {
        "@commitlint/cli": "^17.1.2",
        "@commitlint/config-conventional": "^17.1.0",
        "@types/jest": "^29.0.3",
        "@typescript-eslint/eslint-plugin": "^5.38.0",
        "@typescript-eslint/parser": "^5.38.0",
        "eslint": "^8.24.0",
        "eslint-config-prettier": "^8.5.0",
        "husky": "^8.0.0",
        "jest": "^29.0.3",
        "lint-staged": "^13.0.3",
        "prettier": "^2.7.1",
        "standard-version": "^9.5.0",
        "ts-jest": "^29.0.2",
        "tslint-config-prettier": "^1.18.0",
        "typescript": "^4.8.3"
    },
    "dependencies": {
        "dayjs": "^1.11.5"
    },
    "standard-version": {
        "scripts": {
            "posttag": "npm run publish:tag"
        }
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "prettier --write"
        ]
    },
    "author": "Orison Networks",
    "license": "MIT"
}
